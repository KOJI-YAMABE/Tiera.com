<!DOCTYPE html>
<html>
  <head>
    <title>Tiera</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main class="clearfix">
        <p id="notice"><%= notice %></p>
        <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
