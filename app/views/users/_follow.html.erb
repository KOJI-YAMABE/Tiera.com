<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー解除', user_relationships_path(user), method: :delete, class: "far fa-user btn btn-danger" %>
  <% else %>
    <%= link_to 'フォロー', user_relationships_path(user), method: :POST, class: "fas fa-user btn btn-primary" %>
  <% end %>
<% end %>