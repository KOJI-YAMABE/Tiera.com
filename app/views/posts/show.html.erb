<div class="container">
  <div class="row">
    <div class="clearfix container">
      <div class="col-md-6 col-xs-12">
        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-6">
          <%= link_to user_path(@post.user) do %>
            <%= attachment_image_tag @post.user, :profile_image, fallback: "no_image-mini.jpg", size: "50x50", class: "profile-image-icon pull-left" %>
            <h5 class="pull-left profile-name"><%= @post.user.name %></h5>
          <% end %>
        </div>
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-6">
          <div class="post_<%= @post.id %> pull-right">
            <%= render 'thanks/thank', post: @post %>
          </div>
        </div>
        <%= attachment_image_tag @post, :image, format: "jpeg", fallback: "no_image.jpeg",  class: "img-rounded img-show center-block" %>
        <h4 class="col-xs-10 margin col-xs-offset-1"><%= @post.content %>
        </h4>

        <div class="pull-right">
            <small>投稿日 <%= @post.created_at.strftime('%Y/%m/%d/ %H:%M') %></small>
        </div>
      </div>


      <div class="col-md-6 col-xs-12 margin">
        <div class="col-xs-offset-1">
          <div class="col-xs-5">拾ったゴミの数</div>
          <div class="col-xs-7"><%= @post.garbage_count %></div>

          <div class="col-xs-5">参加人数</div>
          <div class="col-xs-7"><%= @post.join_amount %></div>

          <div class="col-xs-12 l-md-3 margin">
             <% if @post.user == current_user %>
                <%= link_to '編集', edit_post_path(@post), class: "btn-sm btn-primary glyphicon glyphicon-pencil" %>
             <%= link_to '', @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn-default btn glyphicon glyphicon-trash' %>
            <% end %>
          </div>
        </div>
        <div class="show__maps map margin center-block" id="show_map", style= "height: 320px; width: 450px;"></div>
      </div>

      <div class="col-md-8 col-md-offset-2">
        <div class="panel-body">
            <p class="pull-left"><i class="fas fa-comment"></i>
              <%= @post_comments.count %> コメント</p>
          <% if @post_comments.count > 3 %>
            <p class="more pull-right btn btn-default btn-xs" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る</p>
          <% end %>
          <table class="table comment_<%= @post.id %>">
            <%= render 'post_comments/comment', post_comments: @post_comments %>
          </table>
        </div>

        <%= form_for [@post, @post_comment], remote: true do |f| %>
          <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントを投稿しましょう！" %>
          <%= f.submit "送信", class: "btn btn-primary mt-20 pull-right" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-offset-2 col-md-offset-2 margin">
    <%= link_to "一覧ページに戻る", posts_path, class: "btn btn-default btn-xs" %>
  </div>
</div>