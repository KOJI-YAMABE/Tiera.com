<section class="content">
	<h1 class="text-center">投稿一覧</h1>
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="table-container">
				<table class="table table-filter">
					<tbody>
						<% posts.each do |post| %>
							<tr data-status="pagado">
								<td>
									<div class="post_info">
										<%= link_to attachment_image_tag(post, :image, size: '150×150',fallback: 'no_image.jpg', class: "img-rounded img pull-left"), post_path(post) %>
										<%= link_to user_path(post.user) do %>
							    		  <%= post.user.name %>
								    	  <%= attachment_image_tag(post.user, :profile_image,  :fill, 70, 70, fallback: "no-image-mini.jpg", class: "img-circle pull-left profile-thumb") %>
								    	<% end %>
								    	<div class="post_body">
								    		<span class="pull-right"><%= time_ago_in_words(post.created_at) %>前</span>
					                        <p class="summary"><%= post.content %></p>
					                        <i class="fas fa-comment-alt"><%= post.post_comments.count %></i>
					                        <i class="fas fa-hand-holding-heart"><%= post.thanks.count %></i>
					                    </div>
					                </div>
					            </td>
							</tr>
						<% end %>
				    </tbody>
				</table>
			</div>
		</div>
	</div>
</section>
