<% posts.each do |post| %>
  <div class="col-lg-3 col-md-4 col-sm-4 col-xs-5">
    <div class="show-pic">
      <%= link_to attachment_image_tag(post, :image, fallback: "no_image.jpg", class: "img-rounded img"), post_path(post) %>
    </div>
    <div class="col-xs-12">
      <div class="post-time pull-right">
        <%= time_ago_in_words(post.created_at) %>Ââç
      </div>
      <div class="post-user">
        <%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image,  :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle") %>
          <%= post.user.name %>
        <% end %>
      </div>
      <div class="post-content">
        <p><%= post.content.truncate(13) %></p>
      </div>
    </div>
  </div>
<% end %>
