<div class="container">

    <div class="omb_login">
      <h2 class="omb_authTitle">Tieraにログイン</h2>
    <div class="row omb_row-sm-offset-3 omb_socialButtons">
      <div class="col-xs-6 col-sm-3">
        <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-facebook" %>
        <i class="fa fa-facebook visible-xs"></i>
      </div>
      <div class="col-xs-6 col-sm-3">
        <%= link_to "Google+", user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-google hidden-xs" %>
        <i class="fa fa-google-plus visible-xs"></i>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">  
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= flash[:error] %>
          <span class="help-block"></span>
          <div class="input-group">
            <span class="input-group-addon"><i class="fas fa-envelope"></i></span>
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス",  autocomplete: "email", class: "form-control" %>
          </div>
          <span class="help-block"></span>

          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
          </div>
          <span class="help-block"></span>

          <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block"%>
        <% end %>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
